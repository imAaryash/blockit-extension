{
  "manifest_version": 3,
  "name": "Focus Mode â€” Social Productivity",
  "short_name": "Focus Mode",
  "version": "2.3.0",
  "description": "Focus with friends! Track productivity, compete on leaderboards, and chat in real-time. Block distractions and achieve your goals together.",
  "author": "edXtra Technologies",
  "homepage_url": "https://edxtratech.com",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "webNavigation",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Mode - Start Your Session",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "dashboard.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
